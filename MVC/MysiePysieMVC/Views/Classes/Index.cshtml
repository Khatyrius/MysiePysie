@model IEnumerable<MysiePysieMVC.Models.Class>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Klasy</h2>
@{ 
    var messageType = TempData["messageType"];
    var message = TempData["message"];
}

@if (message != null)
{
    <div class="alert @messageType" role="alert">
        @message
    </div>
}
<p>
    @Html.ActionLink("Dodaj klasę", "New", "Classes", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                Lista studentów
            </th>
            <th>
                Edytuj klase
            </th>
            <th>
                Usuwanie
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.ActionLink(
                            "Studenci",                             //linkText
                            "ViewStudents",                         //actionName
                            "Classes",                              //controlerName
                            new
                                 {
                                classId = item.id,
                                className = item.name
                            },                                      //routeValues
                            null                                    //htmlAttributes
                     )
                </td>
                <td>
                    @Html.ActionLink("Edytuj",
                         "Edit",
                         "Classes",
                         new { classId = item.id },
                         null)
                </td>
                <td>
                    @Html.ActionLink("Usun",
                         "DeleteClass",
                         "Classes",
                         new { classId = item.id },
                         null)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>